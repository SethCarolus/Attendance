<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             x:Class="Attendance.Controls.GroupItem"
             x:Name="groupItem">
    <Border
        Margin="10"
        Padding="10"
        BorderBrush="White"
        BorderThickness="1"
        CornerRadius="4">
        
        <Grid
            RowDefinitions="2*, 4*, 2*, 2*"
            RowSpacing="5">
            <Label Content="{Binding GroupName, ElementName=groupItem}" HorizontalAlignment="Center" FontSize="20"/>
            <TextBlock 
                Grid.Row="1"
                Text="{Binding Description, ElementName=groupItem}"
                HorizontalAlignment="Center"
                TextWrapping="Wrap"/>
            
            <Button 
                Grid.Row="2"
                Classes="Default"
                Content="View"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Command="{Binding ViewCommand}"/>   
            
            <Button 
                Grid.Row="3"
                Classes="Caution"
                Content="Remove"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Command="{Binding RemoveCommand}"/>            

        </Grid>
    </Border>
</UserControl>
