<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Attendance.ViewModels"
             mc:Ignorable="d"
             x:Class="Attendance.Controls.AttendanceItem"
             x:Name="attendanceItem">
    <Design.DataContext>
        <viewModels:AttendanceViewModel></viewModels:AttendanceViewModel>
    </Design.DataContext>
    
    <Border
        Margin="10"
        Padding="10"
        BorderBrush="White"
        BorderThickness="1"
        CornerRadius="4">
        <Grid
            ColumnDefinitions="2*, 2*, 4*, 2*">
            
            <TextBlock 
                Grid.Column="0" 
                Text="{Binding FirstName, ElementName=attendanceItem}" 
                VerticalAlignment="Center"/>
            <TextBlock 
                Grid.Column="1" 
                Text="{Binding LastName, ElementName=attendanceItem}" 
                VerticalAlignment="Center"/>    
            
            <CheckBox Grid.Column="3" IsChecked="{Binding Present}" Command="{Binding HandleCommand}" />
            
        </Grid>
    </Border>
</UserControl>
