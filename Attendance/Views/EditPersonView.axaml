<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Attendance.ViewModels"
             mc:Ignorable="d" 
             d:DesignWidth="800" 
             d:DesignHeight="450"
             x:Class="Attendance.Views.EditPersonView">
    
    <Design.DataContext>
        <viewModels:EditPersonViewModel/>
    </Design.DataContext>
    
    <Grid
        Margin="10"
        RowDefinitions="1*, 9*"
        RowSpacing="10">
        
        <Grid ColumnDefinitions="1*, 9*">
            <Button Content="Back" Command="{Binding BackCommand}"/>
        </Grid>
        
        <StackPanel
            Grid.Row="1">
            <Rectangle Height="1" Fill="Gray" Margin="5,5"/>
            <Label FontSize="20">Person</Label>
        
            <TextBox Watermark="First Name" Text="{Binding Person.FirstName }" Margin=" 0  5"/>
        
            <TextBox Watermark="Last Name" Text="{Binding Person.LastName}" Margin=" 0  5"/>
        
            <Button Classes="Different" Command="{Binding EditCommand}" Content="Edit" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
